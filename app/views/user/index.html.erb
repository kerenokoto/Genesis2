<%- model_class = Event -%>
<div class = 'row container'>
<div class="col-md-9">
  
</div>
  <div class="col-md-3 search-container">
    <form class="navbar-form navbar-left" role="search">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Search for events">
          <div class="responsive-form__input--icon__container">
            <input data-mixpanel-internal-click="1" data-mixpanel-action="Global Header Interaction" data-mixpanel-interaction-type="Click" data-mixpanel-element-name="Search for events submit" data-mixpanel-logged-in-status="Logged In" type="submit" data-role="none" class="js-search-submit js-mx-track-click" value="ï€”" alt="Search">
          </div>
          <!-- <button class="gbqfb" aria-label="Events Search" name="btnG" id="gbqfb"><span class="gbqfi gb_Qa"></span>
          </button> -->
        </div>
    </form>
    </div>
</div>
</br>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <!-- <th><%= model_class.human_attribute_name(:id) %></th> -->
      <th><%= model_class.human_attribute_name(:date) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:venue) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:picture) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <!-- <td><%= link_to event.id, event_path(event) %></td> -->
        <td><%= event.date %></td>
        <td><%= event.title %></td>
        <td><%= event.venue %></td>
        <td><%= event.description %></td>
        <td><%= image_tag(event.picture, :size => '80x80')%></td>
        <td><%= event.created_at.to_formatted_s(:long_ordinal) %></td>
        <td>


          <%= link_to t('.show', :default => t("helpers.links.show")),
                      event_path(event), :class => 'btn btn-default btn-xs' %>
<% end %>